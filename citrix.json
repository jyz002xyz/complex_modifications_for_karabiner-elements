{
  "title": "Custom Keyboard for Citrix",
  "rules": [
    {
      "description": "Control + Command + P = Print Screen for Citrix",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "optional": [
              ],
              "mandatory": [ "command", "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "print_screen",
              "modifiers": [ ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.citrix\\.receiver\\.icaviewer\\.mac$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "p",
